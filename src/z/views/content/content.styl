.main
	width: 100%
	display: flex
	align-items: center
	flex-direction: column
	display: relative

.content
	width: 100%
	max-width: 1000px

.topbar
	display: flex
	justify-content: space-between
	align-items: center

h1
	margin-top: 0

h2
	margin-top: 10px

th
	width: 70px

.user-container
	margin-bottom: 24px
	background-color: rgb(240, 240, 240)
	display: inline-block
	padding: 6px

	& > img
		height: 32px
	& > span
		vertical-align: middle

.username
	font-size: 20px

.content-container
	margin-top: 20px
	width: 100%
	background-color: rgb(230, 230, 230)
	padding-top: 8px
	padding-bottom: 4px
	border-radius: 6px
	border-color: rgb(220, 220, 220)
	border-style: solid
	border-width: 3px
	transition: border-color 0.1s linear
	padding-right: 10px

.content-container:focus-within
	border-color: rgb(180, 180, 180)

.content-editor-moderate
	padding-left: 12px

.log-reason
	margin-top: 24px

.log-field
	background-color: rgb(230, 230, 230)
	border-radius: 6px
	border-color: rgb(220, 220, 220)
	border-style: solid
	border-width: 3px
	padding: 12px
	width: 100%
	height: 60px
	transition: border-color 0.1s linear

.log-field:focus-within
	border-color: rgb(180, 180, 180)

.controls
	width: 100%
	margin-top: 12px

	& > button
		float: right

.loading-overlay
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	display: flex
	justify-content: center
	align-items: center
	background-color: rgba(255, 255, 255, 0.7)

.error-message
	background-color:#f2dede
	border-color:#eed3d7
	color:#b94a48
	border-radius: 3px
	border-width: 1px
	border-style: solid
	padding: 6px 12px 6px 16px
	margin-bottom: 6px
