@require '~styles/variables'
@require '~styles-lib/mixins'

.main
	width: 100%
	display: flex
	align-items: center
	flex-direction: column
	display: relative

.content
	width: 100%
	max-width: 1000px

h1
	margin-top: 0

h2
	margin-top: 10px

th
	width: 70px

.content-container
	rounded-corners()
	theme-prop('background-color', 'bg')
	theme-prop('border-color', 'bg-subtle')
	margin-top: 20px
	width: 100%
	padding-top: 8px
	padding-bottom: 4px
	border-style: solid
	border-width: 2px
	transition: border-color 0.1s linear
	padding-right: 10px

.content-editor-moderate
	padding-left: 12px

.log-reason
	margin-top: 24px

.log-field
	rounded-corners()
	theme-prop('background-color', 'bg')
	theme-prop('border-color', 'bg-subtle')
	border-style: solid
	border-width: 2px
	padding: 12px
	width: 100%
	transition: border-color 0.1s linear

.log-field:focus-within
	border-color: rgb(180, 180, 180)

.controls
	width: 100%
	margin-top: 12px
	margin-bottom: 100px

	& > button
		float: right

.loading-overlay
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	display: flex
	justify-content: center
	align-items: center
	background-color: rgba(255, 255, 255, 0.7)

.error-message
	background-color: #f2dede
	border-color: #eed3d7
	color: #b94a48
	border-radius: 3px
	border-width: 1px
	border-style: solid
	padding: 6px 12px 6px 16px
	margin-bottom: 6px
