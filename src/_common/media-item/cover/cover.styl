@require '~styles/variables'

.media-item-cover-container
	display: block
	overflow: hidden
	width: 100%
	height: auto
	background-color: $gray

.media-item-cover
	padding: 0
	position: relative
	overflow: hidden
	height: 100%
	display: flex
	flex-direction: column
	justify-content: center

	&-img
		position: relative
		width: 100%

		@media $media-xs
			width: 140%
			margin-left: -20%

		img
			width: 100%
			height: auto

	&.loaded
		@media $media-sm-up
			&::after
				content: ''
				position: absolute
				bottom: 0
				left: 0
				right: 0
				height: 150px
				background-image: linear-gradient(to bottom, transparent 0, rgba($black, 0.3) 70%, rgba($black, 0.6) 100%)
				z-index: 0
