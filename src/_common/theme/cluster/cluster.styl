@require '~styles/variables'
@require '~styles-lib/mixins'

.theme-cluster
	position: relative
	padding-top: 100%
	height: 0

.-highlight, .-backlight, .-notice
	rounded-corners()
	theme-prop('border-color', 'bg')
	position: absolute
	border-style: solid
	border-width: 2px

.-highlight
	top: 0
	right: 0
	bottom: 0
	left: 0

.-backlight, .-notice
	width: 35%
	height: 35%
	border-top-right-radius: 0
	border-bottom-left-radius: 0

.-backlight
	top: 0
	left: 0

.-notice
	bottom: 0
	right: 0
