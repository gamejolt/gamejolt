.sheet
	rounded-corners-lg()
	change-bg('bg')
	padding: ($grid-gutter-width-xs / 2)
	margin-bottom: $line-height-computed

	@media $media-sm-up
		padding: ($grid-gutter-width / 2)
		border: $border-width-base solid var(--theme-bg-subtle)

	&:not(.sheet-no-full-bleed)
		full-bleed-xs()

// We need the border for mobile here
.sheet-no-full-bleed
	border: $border-width-base solid var(--theme-bg-subtle)

.sheet-full
	padding: 0

.sheet-elevate
	elevate-xs()

	@media $media-sm-up
		elevate-1()
