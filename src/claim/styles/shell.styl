// The popping in/out when the page's height changes is really jarring.
// Always show the vertical scrollbar.
body
	overflow-y: scroll
	background-color: $gray-darkest

#content
	margin-bottom: ($grid-gutter-width / 2)
	background-color: $gray-darkest

	.container
		padding-top: ($grid-gutter-width / 2)
		padding-bottom: ($grid-gutter-width / 2)
		background-color: $white

		&.page-error
			padding-top: 0
			padding-bottom: 0

#header
	.container
		padding: 0

#footer
	@extend .fill-darkest
	font-size: $font-size-tiny
	padding-bottom: $grid-gutter-width

	@media $media-xs
		text-align: center

	@media $media-sm-up
		font-size: $font-size-small

		.container
			padding: 0

		.footer-copyright
			float: right

