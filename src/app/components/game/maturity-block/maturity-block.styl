@require '~styles/variables'

.game-maturity-block
	@media $media-sm-up
		text-align: center

	&-img
		display: inline-block
		border: 6px solid $black
		margin-bottom: $line-height-computed

	h4
		color: var(--theme-pink)

		@media $media-xs
			margin-top: 0

	>>> .game-ogrs
		margin: 0 auto
		text-align: left
		max-width: 350px
		margin-bottom: $line-height-computed

		&.no-descriptors
			float: none !important
			width: 88px

		&-descriptors
			background-color: $gray-lightest
