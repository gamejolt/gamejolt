@require '~styles/variables'
@require '~styles-lib/mixins'

$game-list-item-thumb-width = 145px

.game-list-item
	clearfix()
	margin-bottom: $line-height-computed

.-thumb
	float: left
	width: $game-list-item-thumb-width
	height: $game-list-item-thumb-width * 0.5625

.-meta
	margin-left: $game-list-item-thumb-width + 10px

.-spacing
	display: block
	margin-top: 3px
	margin-bottom: 3px

.-title
	font-weight: bold

.-dev
	text-overflow()
	font-size: $font-size-small

.-followers
	text-overflow()
	font-size: $font-size-small
