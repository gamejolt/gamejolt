@require '~styles/variables'
@require '~styles-lib/mixins'

.chat-window-message
	&-content
		p
			margin-bottom: 4px

		ul, ol
			list-style-position: inside
			padding-left: 0
			margin-bottom: 4px

			& > li
				margin-bottom: 0

		pre
			margin-bottom: 4px

		// Overwrite for dark theme
		code, pre
			change-bg('darkest')
			color: inherit
			border: 0
