@import '~styles/variables'
@import '~styles-lib/mixins'

.chat-user
	&-container
		height: 50px
		overflow: hidden

	&:hover
	&.active
		.chat-user-status
			border-color: var(--theme-bg-subtle) !important

			&.offline
				background-color: var(--theme-fg-muted) !important

			&-inner
				background-color: var(--theme-bg-subtle) !important

	&-list-meta
		text-overflow()
		theme-prop('color', 'fg-muted')
		font-size: $font-size-small

	&-role
		float: none !important
		margin-left: 0 !important
		margin-right: 4px !important
		margin-top: 0 !important

	&-role + &-role
		margin-left: -4px !important

	.user-avatar
		position: relative

		img
			img-circle()
			display: inline-block
			width: 24px
			vertical-align: middle

		.chat-user-status
			position: absolute
			right: 10px
			bottom: 8px
			width: 12px
			height: 12px
			border: 2px solid
			border-color: var(--theme-bg-actual)
			border-radius: 100%
			display: flex
			justify-content: center
			align-items: center

			&-inner
				width: 4px
				height: 4px
				background-color: var(--theme-bg-actual)
				border-radius: 100%

			&.online
				background-color: var(--theme-link)

			&.offline
				background-color: var(--theme-bg-subtle)
