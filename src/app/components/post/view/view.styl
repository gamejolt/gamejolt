@require '~styles/variables'
@require '~styles-lib/mixins'

.-media-item
	theme-prop('background-color', 'bg-offset')
	position: relative
	margin-left: auto
	margin-right: auto

.-img, .-video
	width: 100%
	height: 100%

@media $media-sm-up
	.post-view >>>
		.-media-item, img, video, iframe
			rounded-corners()
