@import './variables'

.-ad-container
	margin-top: -($-item-padding-xs-v)
	margin-bottom: 0

	@media $media-sm-up
		margin-top: 0
		margin-bottom: $-item-padding-v

.-bottom-loading
	margin-top: $-item-padding-v

	@media $media-sm-up
		margin-top: 0

// Don't show the split for the last item in the list.
.-item:last-child ::v-deep(.timeline-list-item-split)
	display: none
