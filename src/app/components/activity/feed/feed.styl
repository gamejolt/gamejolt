@require './variables'
@require '~styles/variables'
@require '~styles-lib/mixins'

.-ad-container
	margin-top: -($-item-padding-xs-v)
	margin-bottom: 0

	@media $media-sm-up
		margin-top: 0
		margin-bottom: $-item-padding-v

.-bottom-loading
	margin-top: $-item-padding-v

	@media $media-sm-up
		margin-top: 0

// Don't show the split for the last item in the list.
.-item:last-child >>> .timeline-list-item-split
	display: none

.-no-posts
	padding: ($grid-gutter-width / 2) 0

	&-spacing
		margin: $line-height-computed 0 0
