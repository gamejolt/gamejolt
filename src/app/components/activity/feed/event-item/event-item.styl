@require '../variables'
@require '~styles-lib/mixins'

.-container
	@media $media-sm-up
		padding-bottom: $-item-padding-v

.-item
	-activity-feed-item()

.-header
	display: flex
	align-items: center

	&-avatar
		theme-prop('background-color', 'bg-subtle')
		img-circle()
		flex: none
		overflow: hidden
		margin-right: $-item-padding-xs
		width: $-avatar-size
		height: $-avatar-size
		line-height: $-avatar-size

		.-item.-new &
			theme-prop('border-color', 'notice')
			border-width: 2px
			border-style: solid

			.-header-avatar-inner
				theme-prop('background-color', 'bg')
				img-circle()
				padding: 2px

		@media $media-sm-up
			margin-right: $-item-padding

	&-content
		flex: auto
		display: flex
		align-items: flex-start
		overflow: hidden

	&-byline
		flex: auto
		display: flex
		flex-direction: column
		overflow: hidden

		&-name, &-game
			text-overflow()

	&-date
		flex: none
		margin-left: $-item-padding-xs
		line-height: $line-height-computed

		@media $media-sm-up
			margin-left: $-item-padding

.-poll, .-controls, .-manage, .fireside-post-lead
	margin-top: $-item-padding-xs-v

	@media $media-sm-up
		margin-top: $-item-padding-v

.-manage
	-activity-feed-item-padding()
	theme-prop('background-color', 'bg-offset')
	margin-bottom: $-item-padding-xs-v
	margin-left: -($-item-padding-xs)
	margin-right: -($-item-padding-xs)

	@media $media-sm-up
		margin-bottom: $-item-padding-v
		margin-left: -($-item-padding-container)
		margin-right: -($-item-padding-container)
