@require '~styles/variables'

.devlog-post-media
	&-embed
		position: relative

		&-img
			display: block
			overflow: hidden

	&-slider
		white-space: nowrap
		transition: transform 300ms $strong-ease-out

		&-item
			display: inline-block
			vertical-align: middle
			width: 100%
			background-color: $gray-lightest
			border-radius: $border-radius-base

			>>> img
				display: block
				width: 100%
				height: auto
				border-radius: $border-radius-base

			>>> video
				border-radius: $border-radius-base

	&-prev, &-next
		display: none
		position: absolute
		top: 50%
		height: 80px
		width: 50px
		line-height: @height
		margin-top: -(@height / 2)
		color: $white
		text-align: center
		background-color: $gray-darker
		z-index: 2
		user-select: none

		&:hover
			color: $gj-green

		@media $media-sm-up
			display: block

	&-prev
		left: -50px
		border-top-left-radius: $border-radius-base
		border-bottom-left-radius: $border-radius-base

	&-next
		right: -50px
		border-top-right-radius: $border-radius-base
		border-bottom-right-radius: $border-radius-base
