.devlog-post-media

	.timeline-list-item-header
		margin-bottom: 0

	.timeline-list-item-details
		margin-top: 0

	&-embed
		position: relative
		background-color: $gray-darker

		&-img
			display: block
			overflow: hidden

	&-slider
		white-space: nowrap
		transition: transform 300ms $strong-ease-out

		&-item
			display: inline-block
			vertical-align: middle
			width: 100%

			img
				display: block
				width: 100%
				height: auto

	&-prev
	&-next
		display: none
		position: absolute
		top: 50%
		height: 80px
		width: 50px
		line-height: @height
		margin-top: -(@height / 2)
		color: $white
		text-align: center
		background-color: $gray-darker
		z-index: 2
		user-select: none

		&:hover
			color: $gj-green

		@media $media-sm-up
			display: block

	&-prev
		left: -50px

	&-next
		right: -50px
