@require '../../variables'
@require '~styles-lib/mixins'

.devlog-post-media
	&-embed
		margin-top: $-item-padding-xs
		position: relative

		@media $media-sm-up
			margin-top: $-item-padding

		&-img
			display: block
			overflow: hidden
			margin-left: -($-item-padding-xs)
			margin-right: -($-item-padding-xs)

			@media $media-sm-up
				margin-left: -($-item-padding)
				margin-right: -($-item-padding)

	&-slider
		white-space: nowrap
		transition: transform 300ms $strong-ease-out

		&-item
			theme-prop('background-color', 'bg-offset')
			display: inline-block
			vertical-align: middle
			width: 100%

			>>> img
				display: block
				width: 100%
				height: auto

	&-prev, &-next
		theme-prop('background-color', 'darker')
		display: none
		position: absolute
		top: 50%
		height: 80px
		width: $grid-gutter-width
		line-height: @height
		margin-top: -(@height / 2)
		color: $white
		text-align: center
		z-index: 2
		user-select: none

		&:hover
			theme-prop('color', 'highlight')

		@media $media-sm-up
			display: block

	&-prev
		left: -($-item-padding + $grid-gutter-width)
		border-top-left-radius: $border-radius-base
		border-bottom-left-radius: $border-radius-base

	&-next
		right: -($-item-padding + $grid-gutter-width)
		border-top-right-radius: $border-radius-base
		border-bottom-right-radius: $border-radius-base
