@require '~styles/variables'

$trophy-thumbnail-border-width = 3px
$trophy-thumbnail-color = $gray-lighter
$trophy-thumbnail-border-color = $black
$trophy-thumbnail-achieved-color = $white
$trophy-thumbnail-achieved-border-color = var(--user-blue)
$trophy-thumbnail-max-width = 75px

.trophy-thumbnail
	padding: $trophy-thumbnail-border-width
	background-color: $trophy-thumbnail-border-color
	border-radius: $border-radius-base
	text-align: center

.trophy-thumbnail-img
	position: relative
	height: 0
	padding-top: 100%
	overflow: hidden

.trophy-thumbnail-img-inner
	position: absolute
	top: 0
	left: 0
	right: 0
	bottom: 0
	background-color: $gray-dark

	> .img-responsive
		display: block
		width: 100%

.trophy-thumbnail-img-1x, .trophy-thumbnail-img-2x
	position: absolute
	top: 50%
	left: 50%

.trophy-thumbnail-img-1x
	margin-left: -(34px / 2)
	margin-top: -(35px / 2)

.trophy-thumbnail-img-2x
	margin-left: -(34px)
	margin-top: -(35px)

.trophy-thumbnail-difficulty
	display: block
	padding-top: $trophy-thumbnail-border-width // match the border
	font-size: $font-size-tiny
	text-align: center
	text-transform: uppercase
	color: $trophy-thumbnail-color

.trophy-thumbnail-achieved
	background-color: $trophy-thumbnail-achieved-border-color

	.trophy-thumbnail-difficulty
		color: $trophy-thumbnail-achieved-color
