@require '~styles/variables'
@require '~styles-lib/mixins'

.form-dashboard-financials
	>>> .done-icon
		color: var(--theme-dark-green)

	>>> .tos-scroller
		scrollable()
		padding: 10px
		max-height: 500px
		font-size: $font-size-small
		border: 2px solid $gray-lightest

		h1, h2, h3, h4, h5, h6, p
			&:first-child
				margin-top: 0
