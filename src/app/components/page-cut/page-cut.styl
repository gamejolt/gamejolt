@require '~styles/variables'
@require '~styles-lib/mixins'

.page-cut
	position: relative
	text-align: center
	margin-bottom: $line-height-computed

	&::before
		theme-prop('border-top-color', 'bg-subtle')
		content: ''
		position: absolute
		top: 18px
		left: 0
		right: 0
		height: 0
		line-height: 0
		border-top-width: 2px
		border-top-style: dashed
		overflow: hidden

	&:empty
		height: 2px

		&::before
			top: 0

	.button
		position: relative
		z-index: 2

		&.-outline
			change-bg('bg')

.page-cut-no-margin
	margin-bottom: 0
