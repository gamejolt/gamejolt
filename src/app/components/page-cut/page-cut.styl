@require '~styles/variables'
@require '~styles-lib/mixins'

.page-cut
	theme-prop('background-color', 'bg')
	position: relative
	text-align: center
	margin-bottom: $line-height-computed

	&::before
		theme-prop('border-top-color', 'bg-subtle')
		content: ''
		position: absolute
		top: 18px
		left: 0
		right: 0
		height: 0
		line-height: 0
		border-top-width: 2px
		border-top-style: dashed
		overflow: hidden

	.button
		theme-prop('background-color', 'bg', true)
		position: relative
		z-index: 2
