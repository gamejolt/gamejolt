@require '~styles/variables'
@require '~styles-lib/mixins'

.rating-widget
	clearfix()
	position: relative
	display: inline-block

	&-icons
		display: inline-block
		margin-right: 20px

		.rating-widget-big &
			margin-right: 40px

	&-clear
		theme-prop('color', 'fg-muted')
		position: absolute
		bottom: 4px
		right: 0
		width: 20px
		text-align: center
		cursor: pointer

		.rating-widget-dark &
			color: $gray-lightest

		.rating-widget-big &
			width: 40px
			right: 5px

		.jolticon
			display: none
			cursor: pointer

			@media $media-mobile
				display: block

			&:hover
				theme-prop('color', 'notice')

			.rating-widget:hover &
				display: block

	&-icon
		theme-prop('color', 'fg-muted')
		float: left
		cursor: pointer
		margin: 0 !important

		&.hover
			theme-prop('color', 'link')

		&.selected
			theme-prop('color', 'link')
