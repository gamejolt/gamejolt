@require '~styles/variables'
@require '~styles-lib/mixins'

.comment-peek
	margin-left: -10px
	margin-right: -10px
	margin-bottom: $line-height-computed

	&-item
		display: inline-block
		vertical-align: top
		width: 50%
		padding: 0 10px

	&-meta
		margin-bottom: 10px

	&-avatar
		float: left
		width: 40px
		margin-right: 10px

		>>> img
			theme-prop('border-color', 'lighter')
			border-width: 2px
			border-style: solid
			background-color: $white

	&-content
		rounded-corners()
		padding: 10px
