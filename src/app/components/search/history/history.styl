@require '~styles/variables'
@require '~styles-lib/mixins'

.search-history
	display: block
	position: absolute
	left: 0
	top: 15px
	width: 20px
	height: 20px
	line-height: @height
	z-index: 2

.-icon
	display: inline-block
	user-select: none
	cursor: pointer

	> .jolticon
		color: $dark-theme-fg-muted
		cursor: pointer

	> .caret
		position: absolute
		top: 0
		right: -10px

	&:hover, &.active
		> .jolticon
			theme-prop('color', 'highlight')
