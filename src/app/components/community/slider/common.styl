@require '~styles/variables'
@require '~styles-lib/mixins'

$-size-xs = 60px
$-size = 100px

.-flex
	display: flex

.-item
	pressy()
	flex: none
	display: inline-block
	margin-right: 10px
	vertical-align: middle
	width: $-size-xs
	position: relative

	@media $media-xs
		height: $-size-xs

	@media $media-sm-up
		width: $-size
		margin-right: 20px
