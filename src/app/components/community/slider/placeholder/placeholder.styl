@require '~styles/variables'
@require '~styles-lib/mixins'
@require '../slider.styl'
@require '../common.styl'

.-container
	display: inline-block

	&:first-child
		margin-left: 2px

	.-item
		img-circle()
		change-bg('bg-subtle')
		height: $-size-xs

		&.-last
			margin-right: 0

		@media $media-sm-up
			height: $-size

	.-text
		lazy-placeholder-block()
		change-bg('bg-subtle')
		margin: 15px 0 4px 10px
		width: 80px
		height: $font-size-small
		display: none

		@media $media-md-up
			display: block
