@require '~styles/variables'

.client-intro-no-overflow
	overflow: hidden

body.is-client gj-client-intro
	position: fixed
	top: 0
	right: 0
	bottom: 0
	left: 0
	background-color: $gray-darkest
	z-index: 100000
	display: flex
	align-items: center
	justify-content: center

.client-intro-wrap img
	display: inline-block
	margin: 0 4px

.client-intro-leave
	animation-duration: 500ms

	.client-intro
		transition: all 500ms
		background-color: rgba( $gray-darkest, 0 )

	.client-intro-wrap
		transition: all 500ms $strong-ease-out
		opacity: 0
		transform: scale(2)

	gj-loading
		opacity: 0
