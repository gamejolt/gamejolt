@require '~styles/variables'
@require '../../../../lib/gj-lib-client/stylus/common/mixins'

.forum-channel-list-item
	margin-bottom: $font-size-base * 2

	h4
		font-weight: bold
		margin: 0

		@media $media-xs
			margin-bottom: 10px

	&-latest-topic
		font-size: $font-size-small

		&-avatar
			float: right
			margin-left: 10px
			width: 40px

		&-info
			&-title
				text-overflow()
				font-weight: bold

			&-user
				text-overflow()
