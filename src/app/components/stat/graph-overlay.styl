
.stat-graph-overlay
	display: block
	position: relative
	margin-bottom: $line-height-computed

	a&
		color: inherit

		&:hover
			.stat-big-label
				color: var(--theme-fg)

		&.active
			.stat-big-label
				color: var(--theme-primary)

	> .stat-big
		position: relative
		margin-bottom: 0

	// Duplicate so it's more "important" than the scoped graph styles.
	.graph.graph
		padding: 0
		margin: 0
		margin-top: 5px
		bottom: 0
		height: 25px

		&-line .chart
			height: 25px
