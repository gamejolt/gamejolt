@require '~styles/variables'
@require '~styles-lib/mixins'

.stat-graph-overlay
	display: block
	position: relative
	margin-bottom: $line-height-computed

	&::before
		change-bg('light')
		display: block
		content: ''
		position: absolute
		left: 0
		right: 0
		bottom: 0
		height: 3px
		opacity: 0
		transition: opacity 300ms
		z-index: 1

	a&
		color: inherit
		padding-bottom: 3px

		&.active
			&, &:hover
				&::before
					transition: none
					opacity: 1

		&:hover::before
			transition: none
			opacity: 0.8

	> .stat-big
		position: relative
		margin-bottom: 0

	// Duplicate so it's more "important" than the scoped graph styles.
	.graph.graph
		padding: 0
		margin: 0
		margin-top: 5px
		bottom: 0
		height: 25px

		&-line .chart
			height: 25px
