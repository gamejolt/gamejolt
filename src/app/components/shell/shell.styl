html
	background-color: $gray-darkest
	background-image: url('/app/components/shell/bg.png')
	background-repeat: repeat
	background-attachment: fixed

gj-shell
	display: block

// This tells angular that we will animate the shell over this time period.
// It allows stuff like .shell-pane and #shell-body to hook into the pane visibility
// animation.
#shell
	transition: 450ms linear all

.shell-popover.popover
	position: fixed
