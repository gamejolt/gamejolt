@require '../../../../lib/gj-lib-client/stylus/mixins/compiled-content'

.fireside-post-body
	compiled-content($font-size-base, $line-height-computed)

	a
		link-underlines(var(--theme-link), var(--theme-bg), var(--theme-link-hover))

	// We have to cancel the link-underlines styling.
	.hashtag
		text-shadow: none
		background-image: none !important

	.spoiler
		font-style: normal

	img, iframe
		rounded-corners()
