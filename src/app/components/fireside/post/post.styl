@require '../../../../lib/gj-lib-client/stylus/mixins/compiled-content'

$-font-size = 16px
$-line-height = $-font-size * 1.5

.fireside-post-body
	compiled-content($-font-size, $-line-height)

	&, p
		font-size: $-font-size
		line-height: $-line-height

	a
		link-underlines(var(--theme-link), var(--theme-bg), var(--theme-link-hover))

	// We have to cancel the link-underlines styling.
	.hashtag
		text-shadow: none
		background-image: none !important

	.spoiler
		font-style: normal

	img, iframe
		rounded-corners()
