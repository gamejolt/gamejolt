.fireside-post-thumbnail
	margin-bottom: $grid-gutter-width-xs

	@media $media-sm-up
		margin-bottom: $grid-gutter-width

	&-heading
		margin-top: 0
		margin-bottom: 0
		font-weight: bold

		a
			@extend .link-unstyled

	&-img
		position: relative
		display: block
		height: 180px
		background-color: $gray-lightest
		background-repeat: no-repeat
		background-position: center center
		background-size: cover
		margin-bottom: $font-size-base

		&::before
		&::after
			overlay-img()
			opacity: 0
			transition: opacity 400ms

		&::before
			background-image: linear-gradient( to right, rgba( $gj-pink, 0.15 ) 0%, rgba( $gj-pink, 0 ) 25% )

		&::after
			background-image: linear-gradient( to right, rgba( $gj-blue, 0 ) 75%, rgba( $gj-blue, 0.15 ) 100% )

		&:hover
			&::before
			&::after
				opacity: 1
				transition: none

	&-byline
		@extend .text-muted, .small

		a
			@extend .link-unstyled
			color: $gray-darker
