@require '~styles/variables'

.ctrl-discover-home-page #content

	.gj-pink
		color: $gj-pink

	.page-cut
		margin-bottom: 0

	.home-game-rows

		h1, h2, h3
			.jolticon
				position: relative
				bottom: 1px

		.game-thumbnail
			margin-bottom: 0

	.fireside-logo
		position: relative
		height: 45px
		vertical-align: baseline

		@media $media-sm-up
			top: 4px
			margin-left: 10px

	.social-widgets
		text-align: center
		margin-top: 15px
		margin-bottom: 0

		@media $media-mobile
			text-align: center

	.social-widgets-label
		display: inline-block
		color: $text-muted
		font-size: $font-size-small
		margin-right: 10px

	.marketplace-section
		.jolticon-heart
			color: $gj-pink
