@require '~styles/variables'
@require '~styles-lib/mixins'

.flow-title
	margin-top: 0

.-tag
	rounded-corners()
	display: inline-block
	padding: 4px
	padding-left: 12px
	padding-right: 12px
	margin: 4px
	border-style: solid
	border-width: 1px
	user-select: none

	a&
		pressy()

.-tag:hover
	theme-prop('background-color', 'highlight')
	theme-prop('color', 'highlight-fg')

.-tag-selected
	theme-prop('background-color', 'highlight')
	theme-prop('color', 'highlight-fg')
