@require '~styles/variables'
@require '~styles-lib/mixins'

.game-preview
	padding: 8px
	margin-right: 16px
	margin-bottom: 16px
	width: 180px
	overflow: hidden
	cursor: pointer
	pressy()

.game-preview-active
	theme-prop('border-color', 'highlight')
	border-style: solid
	border-width: 2px
	rounded-corners()

.user-container
	display: flex
	position: absolute
	margin-left: 2px
	margin-top: -16px
	z-index: 2

.user-container > a
	width: 40px

.developer-name
	margin-left: 48px
	margin-top: 2px
	display: inline-block
	font-size: 13px
	white-space: nowrap
	margin-right: 8px

.developer-verified
	display: inline-block
