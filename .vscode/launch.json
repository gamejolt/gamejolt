{
	"version": "0.2.0",
	"configurations": [{
			"type": "node",
			"request": "launch",
			"name": "Launch Server",
			"program": "${workspaceFolder}/src/server.js"
		},
		{
			"name": "Launch Site in Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:8080",
			"webRoot": "${workspaceRoot}"
		},
		{
			"name": "Launch Site Login in Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:8080/login",
			"webRoot": "${workspaceRoot}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Client",
			"program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
			"args": ["client:run"]
		},
		{
			"name": "Attach to Chrome",
			"type": "chrome",
			"request": "attach",
			"port": 9222,
			"webRoot": "${workspaceRoot}"
		}
	]
}
