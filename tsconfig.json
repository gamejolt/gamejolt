{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": false,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2015",
      "es2017.object"
    ]
  },
  "exclude": [
    "build",
    "node_modules",
    "src/bower-lib"
  ]
}
